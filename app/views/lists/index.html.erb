<section id="todoapp">
  
  <header id="header">
    <h1>todos</h1>
      <div id="list">
        <div id="list-form">

          <%= form_for @list do |f|%>
          <%= f.text_field :title, id: "new-todo", placeholder: "what do you need to do?", autofocus: true %>
          <%= f.submit style: "display: none"%>
          <%end%>

        </div>
      </div>
    </header>

    <section id="main">
      <ul id="todo-list">

        <<%= render @lists%> 
      </ul>
    </section>

</section>